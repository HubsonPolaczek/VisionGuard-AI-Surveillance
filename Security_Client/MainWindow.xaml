<Window x:Class="VisionGuard.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VisionGuard Security Center" Height="450" Width="800"
        Background="#1E1E1E">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>

        <Border x:Name="StatusBorder" Grid.Row="0" Background="#2E7d32" CornerRadius="20" Padding="20" Margin="0,0,0,20">
            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock x:Name="TxtIcon" Text="🛡️" FontSize="60" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="TxtStatus" Text="SYSTEM BEZPIECZNY" FontSize="30" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TxtInfo" Text="Brak zagrożeń. Oczekiwanie na dane z AI..." FontSize="16" Foreground="#DDDDDD" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
                
                <Button x:Name="BtnOpenEvidence" Click="BtnOpenEvidence_Click" 
                        Content="📂 DOWODY" 
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Padding="10,5" Background="#444444" Foreground="White" BorderThickness="0"/>
            </Grid>
        </Border>

        <GroupBox Grid.Row="1" Header="Dziennik Zdarzeń (Live Log)" Foreground="Gray" BorderBrush="#444444">
            <ListView x:Name="LogList" Background="#1E1E1E" Foreground="White" BorderThickness="0" Margin="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Czas" Width="100" DisplayMemberBinding="{Binding Time}"/>
                        <GridViewColumn Header="Zdarzenie" Width="300" DisplayMemberBinding="{Binding Message}"/>
                        <GridViewColumn Header="Pewność AI" Width="100" DisplayMemberBinding="{Binding Confidence}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </Grid>
</Window>